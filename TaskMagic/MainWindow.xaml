<Window x:Class="TaskMagic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskMagic"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock TextWrapping="Wrap" x:Name="OutText" Height="200"/>
            <Button Content="Do Stuff" HorizontalAlignment="Center" Margin="5" Width="100" Height="50" Click="ButtonBase_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
